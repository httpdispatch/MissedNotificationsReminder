<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/debug_log_level"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/debug_log_level_text"
        android:textSize="10sp"
        android:textStyle="bold"
        tools:text="D" />

    <TextView
        android:id="@+id/debug_log_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="?colorSurface"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="10sp"
        tools:text="2020-07-20" />

    <TextView
        android:id="@+id/debug_log_tag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/debug_log_time"
        android:layout_toLeftOf="@id/debug_log_time"
        android:layout_toEndOf="@id/debug_log_level"
        android:layout_toRightOf="@id/debug_log_level"
        android:background="?colorSurface"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="10sp"
        tools:text="TAG" />

    <TextView
        android:id="@+id/debug_log_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/debug_log_level"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:background="?colorSurface"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Test message" />
</RelativeLayout>
