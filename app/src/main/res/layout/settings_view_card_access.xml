<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.activity.SettingsActivity">

    <data>

        <import type="android.view.View"/>

        <variable
            name="model"
            type="com.app.missednotificationsreminder.binding.model.SettingsViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        style="@style/SettingsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/CardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_acess_title"/>

            <View
                style="@style/CardTitleSeparator"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>

            <LinearLayout
                style="@style/CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_acess_enabled"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="@{model.accessInitialized.get()&amp;&amp;model.accessEnabled.get() ? View.VISIBLE :View.GONE}"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_acess_disabled"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/design_textinput_error_color"
                    android:visibility="@{model.accessInitialized.get()&amp;&amp;!model.accessEnabled.get() ? View.VISIBLE :View.GONE}"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="@{model.onManageAccessButtonPressed}"
                        android:text="@string/settings_acess_manage"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>